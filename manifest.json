
{
  "manifest_version": 3,
  "name": "Smart Note-Taker",
  "description": "Transcribe and take notes while watching any video.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "tabCapture"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
